<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme.Base"
    tools:context=".activities.QuestionnairesActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_questionnaries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ButtonTheme.Base">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_questions_list"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ButtonTheme.Base"
            app:titleTextColor="@android:color/white"/>
    </android.support.design.widget.AppBarLayout>

    <ListView
        android:id="@+id/lv_questionaries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/appbar_questionnaries"
        app:layout_constraintTop_toBottomOf="@+id/appbar_questionnaries"
        android:divider="@null"
        android:dividerHeight="0dp"/>


</android.support.constraint.ConstraintLayout>